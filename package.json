{
  "name": "pretty-damn-quick",
  "version": "0.2.0",
  "description": "Run Prettier on your changes only",
  "keywords": [
    "prettier",
    "git",
    "format",
    "changed-files",
    "prettier-plugin",
    "diff"
  ],
  "homepage": "https://github.com/Prog-Jacob/pretty-damn-quick#readme",
  "bugs": {
    "url": "https://github.com/Prog-Jacob/pretty-damn-quick/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Prog-Jacob/pretty-damn-quick.git"
  },
  "license": "MIT",
  "author": "Ahmed Abdelaziz <Ahmed.Abdelaziz.GM@gmail.com> (https://github.com/Prog-Jacob)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "tsc --build tsconfig.build.json --clean",
    "format": "prettier --write .",
    "format:changed": "pretty-damn-quick --changed --lines",
    "lint": "eslint --cache --ext .js,.ts --fix .",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "prepublish": "pnpm clean && pnpm build",
    "postpublish": "pinst --enable",
    "release": "np",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.12",
    "@types/jest": "^30.0.0",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^18.19.130",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "np": "^7.7.0",
    "pinst": "^3.0.0",
    "ts-jest": "^29.4.5",
    "tsd": "^0.25.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "resolutions": {
    "cosmiconfig": "^8.1.3"
  },
  "dependencies": {
    "micromatch": "^4.0.8",
    "prettier": "^3.6.2",
    "yargs": "^18.0.0"
  },
  "bin": {
    "pretty-damn-quick": "dist/index.js"
  }
}
